<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Enable WebSocket support for Socket.IO -->
    <webSocket enabled="true" />
    
    <!-- Node.js configuration -->
    <handlers>
      <add name="iisnode" path="server/src/server.js" verb="*" modules="iisnode"/>
    </handlers>
    
    <!-- Rewrite rules for proper routing -->
    <rewrite>
      <rules>
        <!-- Socket.IO requests -->
        <rule name="SocketIO" stopProcessing="true">
          <match url="socket.io/*" />
          <action type="Rewrite" url="server/src/server.js" />
        </rule>
        
        <!-- Static files -->
        <rule name="StaticContent" stopProcessing="true">
          <match url="^(client|src|assets)/.*" />
          <action type="None" />
        </rule>
        
        <!-- All other requests to Node.js -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="server/src/server.js"/>
        </rule>
      </rules>
    </rewrite>
    
    <!-- Security headers -->
    <httpHeaders>
      <add name="X-Content-Type-Options" value="nosniff" />
      <add name="X-Frame-Options" value="DENY" />
      <add name="X-XSS-Protection" value="1; mode=block" />
    </httpHeaders>
    
    <!-- Default documents -->
    <defaultDocument>
      <files>
        <clear />
        <add value="client/index.html" />
      </files>
    </defaultDocument>
    
    <!-- Static content caching -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" />
    </staticContent>
  </system.webServer>
</configuration>
